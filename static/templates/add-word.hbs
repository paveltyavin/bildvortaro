<div class="row">
    <div class="col-sm-4">

        <div class="word-block">
            <div class="word-image-container fileinput-button">
                <div class="word-image">
                    <div class="btn btn-default btn-lg">
                        <i class="fa fa-plus"></i>
                    </div>
                </div>
                <input class="fileupload" type="file" name="image" multiple>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="word-name{{id}}" class="col-sm-4 control-label">Vorto</label>

                <div class="col-sm-8">
                    <input type="text" class="form-control word-name" id="word-name{{id}}" placeholder="...">
                </div>
            </div>

            <div class="form-group">
                <label for="word-category{{id}}" class="col-sm-4 control-label">Kategoro</label>

                <div class="col-sm-8">
                    <input type="text" class="form-control word-category" id="word-category{{id}}">
                </div>
            </div>

            <div class="form-group">
                <label for="word-class{{id}}" class="col-sm-4 control-label">Vorto Klasso</label>

                <div class="col-sm-8">
                    <select class="form-control word-class" id="word-class{{id}}">
                        <option value="S">Subtantivo</option>
                        <option value="A">Adjektivo</option>
                        <option value="V">Verbo</option>
                        <option value="N">Numeralo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-primary word-add-submit">Ok</button>
                </div>
            </div>

        </form>
    </div>
</div>